<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

<form class="search" action="/search" method="POST">
  <label for="search__name-input" class="search__name-label"></label>
  <input name="name" id="search__name-input" class="search__input" placeholder="Search for Anime"></input>
</form>


{{#each anime}}
<img src="{{posterImage.original}}">
<a href="http://kitsu.io/anime/{{slug}}"><p>{{canonicalTitle}}</p></a>
<p>{{year}} - {{season}} - {{episodeCount}} episodes</p>
<p>{{synopsis}}</p>
{{/each}}
