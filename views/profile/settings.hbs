

<form method="POST">
  <label for="input-name">New Username</label>
  <input
    id="input-name"
    type="text"
    placeholder="New username"
    name="username"
    value="{{ user.username }}"
  >

  <label for="input-email">Email</label>
  <input
    id="input-email"
    type="email"
    placeholder="Email"
    name="email"
    value="{{ user.email }}"
  >
  
  <label for ='user-avatar'>Profile Picture</label>
  <input 
  id='user-avatar'
  type="file" 
  name="user-avatar"
  value="{{ user.avatar }}"
  >
  

  <button>Edit Profile</button>
</form>
