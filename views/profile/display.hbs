<div
  class="banner"
  style="background-image: url({{userPublic.banner}});"
>
  <div class="profile-overlay"></div>
</div>
<main class="profile">
  <div class="profile-top">
    <div class="profile-top__left">
      <div class="profile__icon-wrapper">
        <img class="profile__icon" src="{{userPublic.avatar}}" />
      </div>
      <div class="profile__name">
        {{userPublic.username}}
      </div>
     
    </div>

    <div class="profile-top__right">
       <form action="
      {{#if isFollowing}}
        /profile/{{userPublic._id}}/delete
        {{else}}
        /profile/{{userPublic._id}}
      {{/if}}
      " class="profile__follow-form">
        <button class="profile__follow-btn">
        {{#if isFollowing}}
        Unfollow
        {{else}}
        Follow
        {{/if}}
        </button>
      </form>     
      <p class="profile__tagline">
        Break through the heavens with your drill!
      </p>
