    </div>
  </div>
  <aside class="profile-sidebar">
    <div>
      <h3 class="heading-3">
      Recent Activity
    </h3>
    </div>
    
    <div class="follow">
      <h3>Following</h3>

      {{#if usersFollowing}}
 {{#each usersFollowing  }}
       <div class="user">
      <div class="user__img-wrapper">
        <a href="/profile/{{followedId.username}}">
          <img src="{{followedId.avatar}}" alt="{{followedId.username}}'s Icon" class="user__img" />
        </a>
      </div>
      <div class="user__info">
        <a href="/profile/{{followedId.username}}">
          {{followedId.username}}
        </a>
      </div>
 {{/each}}
{{/if}}

    </div>
    <div class="follow">
      <h3>Followers</h3>


      {{#if usersFollowers}}
 {{#each usersFollowers  }}
 <div class="user">
      <div class="user__img-wrapper">
        <a href="/profile/{{followerId.username}}">
          <img src="{{followerId.avatar}}" alt="{{followerId.username}}'s Icon" class="user__img" />
        </a>
      </div>
      <div class="user__info">
        <a href="/profile/{{followerId.username}}">
          {{followerId.username}}
        </a>
      </div>
{{/each}}
{{/if}}



    </div>

    
  </aside>

{{#if user}}
  <div class="profile-post-area">
    <div class="post-form">
      <form
        method="POST"
        action="/profile/{{userPublic.username}}/post"
        class="post-form"
      >
        <label for="input-title"></label>
        <input id="input-title" name="title" placeholder="Title" />
        <label for="input-content">
          Post
        </label>
        <textarea
          id="input-content"
          name="content"
          placeholder="Write your post..."
        ></textarea>
        <button type="submit">
          Submit
        </button>
      </form>
    </div>
  </div>
{{/if}}

<div class="profile-feed">
  {{#each userPublic.feed}}
    <h3 class="heading-3">
      {{title}}
    </h3>
    <p>
      {{content}}
    </p>
    {{#if @root.user}}
      {{#ifEquals creator @root.user._id}}
        <a href="/post/{{_id}}/update">
          Edit
        </a>
        <form action="/profile/{{@root.userPublic.username}}/{{id}}/delete" method="post">
          <button type="submit">
            Delete
          </button>
        </form>
      {{/ifEquals}}
    {{/if}}
  {{/each}}
</div>
</div>


</main>

