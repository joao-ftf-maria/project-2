        <a href="" class="profile-top__button"></a> --}}
      </div>
    </div>
  </div>
  <div class="profile-library" id="library">
      <h2 class="heading-2">
        Library
      </h2>
      <h3 class="heading-3">
        Currently Watching
      </h3>
      <div class="library-grid">
      {{#each library}}
        <div class="library-item">
          <img
            src="{{anime.poster}}"
            alt=""
            class="library-item__poster"
          />
          <div class="library-item__progress-line"></div>
          <div class="library-item__info">
            <span class="library-item__progress">
              {{anime.name}}
            </span>
            <span class="library-item__progress">
              {{anime.progress}} / {{anime.length}}
            </span>
            <span class="library-item__rating">
              {{anime.rating}}
            </span>
          </div>
        </div>
      {{/each}}
